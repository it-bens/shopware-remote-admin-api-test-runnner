{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "separateMinorPatch": true,
  "packageRules": [
    {
      "matchDatasources": [
        "github-tags"
      ],
      "groupName": "github workflow actions",
      "schedule": [
        "every weekend"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Docker dependencies",
      "schedule": [
        "every weekend"
      ]
    },
    {
      "matchDepNames": [
        "php"
      ],
      "matchUpdateTypes": ["major"],
      "groupName": "PHP major versions",
      "enabled": false
    },
    {
      "matchDepNames": [
        "php"
      ],
      "matchUpdateTypes": ["minor"],
      "groupName": "PHP minor versions",
      "enabled": false
    },
    {
      "matchDepNames": [
        "php"
      ],
      "matchUpdateTypes": ["patch"],
      "groupName": "PHP patch versions",
      "schedule": [
        "every weekend"
      ]
    },
    {
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["mariadb/server"],
      "matchUpdateTypes": ["patch"],
      "groupName": "MariaDB patch versions",
      "schedule": [
        "every weekend"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/.*\\.(yml|yaml)$"
      ],
      "matchStrings": [
        "php_version: '(?<currentValue>[0-9\\.]+)'"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "php",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^docker/production/Dockerfile$"
      ],
      "matchStrings": [
        "ARG MARIADB_VERSION=(?<currentValue>[0-9\\.]+)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "mariadb/server",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ]
}
